<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableRow
        android:id="@+id/Taula_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/Taula_Esquerra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/animal1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Taula_Dreta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/animal2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        </RelativeLayout>



    </TableRow>

    <RelativeLayout
        android:id="@+id/Seccio_Buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal">


        <ImageButton
            android:id="@+id/Buto_Igual"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/igual"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/Buto_MenorQue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/Buto_Igual"
            android:background="@drawable/menor"/>
        <ImageButton
            android:id="@+id/Buto_MajorQue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:layout_toLeftOf="@+id/Buto_Igual"
            android:background="@drawable/major"/>

        <Button
            android:id="@+id/Buto_Reiniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Buto_Igual"
            android:layout_centerInParent="true"
            android:text="Reiniciar"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/Resultat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:padding="20dp" />
    </RelativeLayout>

</TableLayout>